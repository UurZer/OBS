@model OBS.Entities.Model.LessonModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Güncelle</h1>

<h4>Ders</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Lesson.LessonId" />
            <div class="form-group">
                <label asp-for="Lesson.Name" class="control-label"></label>
                <input asp-for="Lesson.Name" class="form-control" />
                <span asp-validation-for="Lesson.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.Code" class="control-label"></label>
                <input asp-for="Lesson.Code" class="form-control" />
                <span asp-validation-for="Lesson.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.TeacherId" class="control-label"></label>
                <select asp-for="Lesson.TeacherId" class="form-control" asp-items="Model.TeacherList"></select>
                <span asp-validation-for="Lesson.TeacherId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
