@model IEnumerable<OBS.Entities.Tables.Lesson>
@{
    ViewData["Title"] = "Index";
}

<h1>Öğrenci İşlemleri</h1>

<p>
    <a asp-action="Create" class="btn btn-sm btn-success">
        <i class="fas fa-plus"></i> Kayıt Ekle
    </a>
</p>

<table class="table">
    <thead class="bg-dark text-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                Dersin Sorumlusu
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Teacher.Tag)
                    @Html.DisplayFor(modelItem => item.Teacher.NameSurname)
                </td>
                <td>
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.LessonId">
                        <i class="fa fa-cog"></i> Güncelle
                    </a>

                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.LessonId">
                        <i class="fal fa-trash-alt"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
