@model OBS.Entities.Model.StudentExamGradeModel

@{
    ViewData["Title"] = "Create";
}
<p>
    <a class="btn btn-sm btn-success text-light">
        <i class="fas fa-plus"></i> Kayıt Ekle
    </a>
</p>

<h4>Sınav</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(sa => Model.StudentExamGrade.Id)
            <div class="form-group">
                <label asp-for="StudentExamGrade.StudentId" class="control-label"></label>
                <select asp-for="StudentExamGrade.StudentId" class="form-control" asp-items="Model.StudentList"></select>
            </div>

            <div class="form-group">
                <label asp-for="StudentExamGrade.LessonId" class="control-label"></label>
                <select asp-for="StudentExamGrade.LessonId" class="form-control" asp-items="Model.LessonList"></select>
            </div>
            <div class="form-group">
                <label asp-for="StudentExamGrade.Vize" class="control-label"></label>
                <input asp-for="StudentExamGrade.Vize" class="form-control" />
                <span asp-validation-for="StudentExamGrade.Vize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentExamGrade.Final" class="control-label"></label>
                <input asp-for="StudentExamGrade.Final" class="form-control" />
                <span asp-validation-for="StudentExamGrade.Final" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Average" class="control-label"></label>
                <input asp-for="Average" readonly="readonly" class="form-control" />
                <span asp-validation-for="Average" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
