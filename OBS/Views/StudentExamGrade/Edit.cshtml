@model OBS.Entities.Model.StudentExamGradeModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Güncelle</h1>

<h4>Sınav</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StudentExamGrade.Id" />
            <div class="form-group">
                <label asp-for="StudentExamGrade.StudentId" class="control-label"></label>
                <select asp-for="StudentExamGrade.StudentId" class="form-control" asp-items="Model.StudentList"></select>
                <span asp-validation-for="StudentExamGrade.StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentExamGrade.LessonId" class="control-label"></label>
                <select asp-for="StudentExamGrade.LessonId" class="form-control" asp-items="Model.LessonList"></select>
                <span asp-validation-for="StudentExamGrade.LessonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentExamGrade.Vize" class="control-label"></label>
                <input asp-for="StudentExamGrade.Vize" class="form-control" />
                <span asp-validation-for="Vize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentExamGrade.Final" class="control-label"></label>
                <input asp-for="StudentExamGrade.Final" class="form-control" />
                <span asp-validation-for="StudentExamGrade.Final" class="text-danger"></span>
            </div>
            <div class="form-group" hidden="hidden">
                <label asp-for="StudentExamGrade.Average" class="control-label"></label>
                <input asp-for="StudentExamGrade.Average" class="form-control" />
                <span asp-validation-for="StudentExamGrade.Average" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Listeye Dön</a>
</div>