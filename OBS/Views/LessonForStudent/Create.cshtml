@model OBS.Entities.Model.LessonForStudentModel

@{
    ViewData["Title"] = "Create";
}

<p>
    <a class="btn btn-sm btn-success text-light">
        <i class="fas fa-plus"></i> Kayıt Ekle
    </a>
</p>

<h4>Öğrenci</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(sa => Model.LessonForStudent.Id)
            <div class="form-group">
                <label asp-for="LessonForStudent.StudentId" class="control-label"></label>
                <select asp-for="LessonForStudent.StudentId" class="form-control" asp-items="Model.StudentList"></select>
            </div>

            <div class="form-group">
                <label asp-for="LessonForStudent.LessonId" class="control-label"></label>
                <select asp-for="LessonForStudent.LessonId" class="form-control" asp-items="Model.LessonList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
